<div class="form-container">

  <%= form_for(article) do |a| %>
    <div class="form-group">
      <div class="form-item">
        <%= a.label :title %>
      </div>

      <div class="form-item">
        <%= a.text_field :title, class: 'form-control' %>
      </div>

    </div>

    <div class="form-group">
      <div class="form-item">
        <%= a.label :content %>
      </div>
      <div class="form-item">
        <%= a.text_field :content, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group" id="submit-button">
      <%= a.submit class: 'btn btn-primary' %>
    </div>

  <% end %>

</div>

